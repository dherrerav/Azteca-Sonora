<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>mod_flowplayer</name>
	<author>Saul Mart√≠nez</author>
	<creationDate>July 2011</creationDate>
	<authorEmail>saul.martinez05@gmail.com</authorEmail>
	<authorUrl>http://twitter.com/samacs</authorUrl>
	<version>1.0.0</version>
	<description>Shows a flv video using Flowplayer (http://flowplayer.org)</description>
	<files>
	<filename module="mod_flowplayer">mod_flowplayer.php</filename>
	<folder>tmpl</folder>
	<filename>helper.php</filename>
	<filename>index.html</filename>
	<filename>mod_flowplayer.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="video_name"
					type="text"
					default=""
					label="Video name"
					description="The name of the video" />
				<field
					name="width"
					type="text"
					default="425"
					label="Width"
					description="The width of the video" />
				<field
					name="height"
					type="text"
					default="300"
					label="Height"
					description="The height of the video" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>