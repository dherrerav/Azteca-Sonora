<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.7.0" method="upgrade" group="content">
	<name>Content - bo:VideoJS</name>
	<author>Alfred Bösch</author>
	<creationDate>August 2011</creationDate>
	<copyright>(C) 2011 Alfred Bösch. Alle Rechte vorbehalten.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>support@boeschung.de</authorEmail>
	<authorUrl>http://www.boeschung.de</authorUrl>
	<version>1.5.0</version>
	<description>PLG_BO_VIDEOJS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="bo_videojs">bo_videojs.php</filename>
		<folder>videojs</folder>
	</files>
	<languages folder="language">
		<language tag="de-DE">de-DE/de-DE.plg_content_bo_videojs.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_bo_videojs.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_bo_videojs.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_bo_videojs.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="video_mp4" type="text" default="http://video-js.zencoder.com/oceans-clip.mp4" label="LABEL_VIDEO_MP4" description="DESC_VIDEO_MP4" size="40" />
				<field name="video_webm" type="text" default="http://video-js.zencoder.com/oceans-clip.webm" label="LABEL_VIDEO_WEBM" description="DESC_VIDEO_WEBM" size="40" />
				<field name="video_ogg" type="text" default="http://video-js.zencoder.com/oceans-clip.ogv" label="LABEL_VIDEO_OGG" description="DESC_VIDEO_OGG" size="40" />
				<field name="flash" type="text" default="http://video-js.zencoder.com/oceans-clip.mp4" label="LABEL_FLASH" description="DESC_FLASH" size="40" />
				<field name="spacer1" type="spacer" hr="true" />
				<field name="image" type="text" default="http://video-js.zencoder.com/oceans-clip.png" label="LABEL_IMAGE" description="DESC_IMAGE" size="40" />
				<field name="image_visibility" type="radio" default="1" label="LABEL_IMAGE_VISIBILITY" description="DESC_IMAGE_VISIBILITY">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="spacer2" type="spacer" hr="true" />
				<field name="width" type="text" default="640" label="LABEL_WIDTH" description="DESC_WIDTH" size="3" />
				<field name="height" type="text" default="264" label="LABEL_HEIGHT" description="DESC_HEIGHT" size="3" />
				<field name="skin" type="list" default="default" label="LABEL_SKIN" description="DESC_SKIN">
					<option value="default">default</option>
					<option value="hu">hu</option>
					<option value="tube">tube</option>
					<option value="vim">vim</option>
				</field>
				<field name="autoplay" type="radio" default="0" label="LABEL_AUTOPLAY" description="DESC_AUTOPLAY">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="preload" type="radio" default="1" label="LABEL_PRELOAD" description="DESC_PRELOAD">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="loop" type="radio" default="0" label="LABEL_LOOP" description="DESC_LOOP">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="controlsBelow" type="radio" default="0" label="LABEL_CONTROLS_BELOW" description="DESC_CONTROLS_BELOW">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="controlsAtStart" type="radio" default="0" label="LABEL_CONTROLS_AT_START" description="DESC_CONTROLS_AT_START">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="controlsHiding" type="radio" default="1" label="LABEL_CONTROLS_HIDING" description="DESC_CONTROLS_HIDING">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="defaultVolume" type="text" default="0.85" label="LABEL_DEFAULT_VOLUME" description="DESC_DEFAULT_VOLUME" size="3" />
				<field name="playerFallbackOrder" type="list" default="html5, flash, links" label="LABEL_PLAYER_FALLBACK_ORDER" description="DESC_PLAYER_FALLBACK_ORDER">
					<option value="'html5', 'flash', 'links'">html5, flash, links</option>
					<option value="'html5', 'links', 'flash'">html5, links, flash</option>
					<option value="'flash', 'html5', 'links'">flash, html5, links</option>
				</field>
				<field name="wmode" type="list" default="default" label="LABEL_WMODE" description="DESC_WMODE">
					<option value="default">default</option>
					<option value="opaque">opaque</option>
					<option value="transparent">transparent</option>
				</field>
				<field name="flashPlayerVersion" type="text" default="9" label="LABEL_FLASH_PLAYER_VERSION" description="DESC_FLASH_PLAYER_VERSION" size="3" />
			</fieldset>
		</fields>
	</config>
</extension>