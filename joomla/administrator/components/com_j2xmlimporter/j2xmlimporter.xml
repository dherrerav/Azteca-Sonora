<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>J2XML Importer</name>
	<creationDate>May 2011</creationDate>
	<author>Helios Ciancio</author>
	<authorEmail>info@eshiol.it</authorEmail>
	<authorUrl>www.eshiol.it</authorUrl>
	<copyright>(C) 2010-2011, Helios Ciancio. All rights reserved.</copyright>
	<license>GNU/GPL v3</license>
	<version>1.6.0.54</version>
	<description>COM_J2XMLIMPORTER_DESCRIPTION</description>
	<administration>
		<!-- Administration Menu Section -->
		<menu img="components/com_j2xmlimporter/assets/images/menu/icon-16-j2xmlimporter.png">J2XMLImporter</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<filename>j2xmlimporter.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<folder>assets</folder>
			<folder>buttons</folder>
			<folder>controllers</folder>
			<folder>files</folder>
			<folder>helpers</folder>
			<folder>views</folder>
		</files>	
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_j2xmlimporter.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_j2xmlimporter.sys.ini</language>
		</languages>
	</administration>
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>j2xmlimporter.php</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="eshiol.it">http://www.eshiol.it/update/com_j2xmlimporter/extension.xml</server>
	</updateservers>
</extension>