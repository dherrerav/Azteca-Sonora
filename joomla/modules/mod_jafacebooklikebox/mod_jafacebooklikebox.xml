	 </description>
	
     <files>
      	<folder>tmpl</folder>
		<filename>index.html</filename>
		<filename module="mod_jafacebooklikebox">mod_jafacebooklikebox.php</filename>
	</files>
	
	<languages>
		<language 
			tag="en-GB">en-GB.mod_jafacebooklikebox.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="moduleclass_sfx" 
					type="text" 
					default=""
					label="MODULE_CLASS_SUFFIX" 
					description="MODULE_CLASS_SUFFIX_DESC" />	
				<field 
					name="id" 
					type="text" 
					default="123144964369587" 
					label="FACEBOOK_ID" 
					description="DESC_FACEBOOK_ID" />
				
				<field 
					name="width" 
					type="text" 
					default="300" 
					label="Width" 
					description="DESC_WITDH" />
				
				<field 
					name="height" 
					type="text" 
					default="587" 
					label="Height" 
					description="DESC_HEIGHT" />
				
				<field 
					name="connections" 
					type="text" 
					default="10" 
					label="Connections" 
					
					description="SHOW_CONNECTIONS" />
				
				 <field 
					name="stream" 
					type="radio" 
					default="1" 
					label="Show_Stream" 
					description="DESC_SHOW_STREAM">
						<option value="1">YES</option>
						<option value="0">NO</option>
				 </field>
				
				 <field 
					name="header" 
					type="radio" 
					default="1" 
					label="Show_Header"
					description="SHOW_FACEBOOK_HEADER" >
						<option value="1">YES</option>
						<option value="0">NO</option>
				 </field>
				<field 
					name="colorscheme" 
					type="list" 
					default="1" 
					label="COLOR_SCHEME" 
					description="DESC_COLOR_SCHEME" >
						<option value="1">Light</option>
						<option value="0">Dark</option>
				 </field>
				<field 
					name="border_color" 
					type="text"
					default="" 
					label="BORDER_COLOR" 
					description="DESC_BORDER_COLOR" />
			</fieldset> 	
		</fields>
	</config>
</extension>